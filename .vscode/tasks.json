// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "watch",
      "problemMatcher": "$tsc-watch",
      "isBackground": true,
      "presentation": {
        "reveal": "never"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "type": "npm",
      "script": "lint",
      "problemMatcher": [],
      "label": "npm: lint",
      "detail": "prettier --check ."
    },
    {
      "type": "shell",
      "label": "setEnv",
      "command": "workon ooxml",
    },
    {
      "type": "shell",
      "label": "compile",
      "command": "workon ooxml && npm run compile"
    },
    {
      "label": "preLaunch",
      "dependsOrder": "sequence",
      "dependsOn": [
        "setEnv",
        "compile"
      ]
    }
  ]
}
