{
  "name": "ooxml-viewer",
  "displayName": "OOXML Viewer",
  "description": "Displays the contents of OOXML files",
  "version": "1.2.2",
  "license": "MIT",
  "publisher": "yuenm18",
  "homepage": "https://github.com/yuenm18/ooxml-viewer-vscode/blob/master/README.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/yuenm18/ooxml-viewer-vscode.git"
  },
  "bugs": {
    "url": "https://github.com/yuenm18/ooxml-viewer-vscode/issues"
  },
  "icon": "resources/icons/icon.png",
  "keywords": [
    "ooxml",
    "oxml",
    "office open xml"
  ],
  "engines": {
    "vscode": "^1.50.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:ooxmlViewer.openOoxmlPackage",
    "onView:ooxmlViewer"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ooxmlViewer.openOoxmlPackage",
        "title": "Open OOXML Package",
        "when": "resourceLangId == ooxml"
      },
      {
        "command": "ooxmlViewer.clear",
        "title": "Clear",
        "when": "view == ooxmlViewer"
      },
      {
        "command": "ooxmlViewer.showDiff",
        "title": "Compare with Previous",
        "when": "view == ooxmlViewer"
      },
      {
        "command": "ooxmlViewer.searchParts",
        "title": "Search Parts",
        "when": "view == ooxmlViewer"
      }
    ],
    "languages": [
      {
        "id": "ooxml",
        "extensions": [
          ".docx",
          ".xlsx",
          ".pptx",
          ".odt",
          ".ods",
          ".odp",
          ".docm",
          ".dotm",
          ".xlsm",
          ".pptm",
          ".dotx",
          ".xltx",
          ".xltm",
          ".potx",
          ".sldx",
          ".ppsx"
        ]
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "ooxmlViewer.openOoxmlPackage",
          "group": "navigation",
          "when": "resourceLangId == ooxml"
        }
      ],
      "view/title": [
        {
          "command": "ooxmlViewer.clear",
          "group": "navigation",
          "when": "view == ooxmlViewer"
        },
        {
          "command": "ooxmlViewer.searchParts",
          "group": "navigation",
          "when": "view == ooxmlViewer"
        }
      ],
      "view/item/context": [
        {
          "command": "ooxmlViewer.showDiff",
          "group": "navigation",
          "when": "view == ooxmlViewer && viewItem == file"
        }
      ],
      "commandPalette": [
        {
          "command": "ooxmlViewer.openOoxmlPackage",
          "when": "false"
        },
        {
          "command": "ooxmlViewer.clear",
          "when": "false"
        },
        {
          "command": "ooxmlViewer.showDiff",
          "when": "false"
        }
      ]
    },
    "views": {
      "explorer": [
        {
          "id": "ooxmlViewer",
          "name": "OOXML Viewer",
          "visibility": "visible"
        }
      ]
    },
    "configuration": {
      "title": "OOXML Viewer",
      "properties": {
        "ooxmlViewer.preserveComments": {
          "type": "boolean",
          "description": "If true comments are preserved in xml parts, if false comments are removed on save. Defaults to true.",
          "default": true
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "webpack --mode production",
    "compile": "webpack --mode development",
    "watch": "webpack --mode development --watch",
    "test-watch": "tsc -watch -p ./",
    "pretest": "tsc -p ./",
    "test": "node ./out/test/runTest.js",
    "lint": "prettier --check ."
  },
  "devDependencies": {
    "@types/chai": "^4.3.0",
    "@types/glob": "^7.2.0",
    "@types/mime-types": "^2.1.1",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.23",
    "@types/sinon": "^10.0.11",
    "@types/vscode": "^1.50.0",
    "chai": "^4.3.6",
    "glob": "^7.2.0",
    "mocha": "^9.2.2",
    "nyc": "^15.1.0",
    "prettier": "^2.6.2",
    "sinon": "^13.0.1",
    "ts-loader": "^9.2.8",
    "typescript": "^4.6.3",
    "vsce": "^2.7.0",
    "vscode-test": "^1.6.1",
    "webpack": "^5.71.0",
    "webpack-cli": "^4.9.2"
  },
  "dependencies": {
    "jszip": "^3.9.1",
    "mime-types": "^2.1.35",
    "xml-formatter": "^2.6.1"
  }
}
