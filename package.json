{
  "name": "ooxml-viewer",
  "displayName": "OOXML Viewer",
  "description": "Displays the contents of OOXML files",
  "version": "1.3.1",
  "license": "MIT",
  "publisher": "yuenm18",
  "homepage": "https://github.com/yuenm18/ooxml-viewer-vscode/blob/master/README.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/yuenm18/ooxml-viewer-vscode.git"
  },
  "bugs": {
    "url": "https://github.com/yuenm18/ooxml-viewer-vscode/issues"
  },
  "icon": "resources/icons/icon.png",
  "keywords": [
    "ooxml",
    "oxml",
    "office open xml"
  ],
  "engines": {
    "vscode": "^1.50.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:ooxmlViewer.openOoxmlPackage",
    "onView:ooxmlViewer"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ooxmlViewer.openOoxmlPackage",
        "title": "Open OOXML Package",
        "when": "resourceLangId == ooxml"
      },
      {
        "command": "ooxmlViewer.clear",
        "title": "Clear",
        "when": "view == ooxmlViewer"
      },
      {
        "command": "ooxmlViewer.showDiff",
        "title": "Compare with Previous",
        "when": "view == ooxmlViewer"
      },
      {
        "command": "ooxmlViewer.searchParts",
        "title": "Search Parts",
        "when": "view == ooxmlViewer"
      }
    ],
    "languages": [
      {
        "id": "ooxml",
        "extensions": [
          ".docx",
          ".xlsx",
          ".pptx",
          ".odt",
          ".ods",
          ".odp",
          ".docm",
          ".dotm",
          ".xlsm",
          ".pptm",
          ".dotx",
          ".xltx",
          ".xltm",
          ".potx",
          ".sldx",
          ".ppsx"
        ]
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "ooxmlViewer.openOoxmlPackage",
          "group": "navigation",
          "when": "resourceLangId == ooxml"
        }
      ],
      "view/title": [
        {
          "command": "ooxmlViewer.clear",
          "group": "navigation",
          "when": "view == ooxmlViewer"
        },
        {
          "command": "ooxmlViewer.searchParts",
          "group": "navigation",
          "when": "view == ooxmlViewer"
        }
      ],
      "view/item/context": [
        {
          "command": "ooxmlViewer.showDiff",
          "group": "navigation",
          "when": "view == ooxmlViewer && viewItem == file"
        }
      ],
      "commandPalette": [
        {
          "command": "ooxmlViewer.openOoxmlPackage",
          "when": "false"
        },
        {
          "command": "ooxmlViewer.clear",
          "when": "false"
        },
        {
          "command": "ooxmlViewer.showDiff",
          "when": "false"
        }
      ]
    },
    "views": {
      "explorer": [
        {
          "id": "ooxmlViewer",
          "name": "OOXML Viewer",
          "visibility": "visible"
        }
      ]
    },
    "configuration": {
      "title": "OOXML Viewer",
      "properties": {
        "ooxmlViewer.preserveComments": {
          "type": "boolean",
          "description": "If true comments are preserved in xml parts, if false comments are removed on save. Defaults to true.",
          "default": true
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "webpack --mode production",
    "compile": "webpack --mode development",
    "watch": "webpack --mode development --watch",
    "test-watch": "tsc -watch -p ./",
    "pretest": "tsc -p ./",
    "test": "node ./out/test/runTest.js",
    "lint": "prettier --check ."
  },
  "devDependencies": {
    "@types/chai": "^4.3.4",
    "@types/ffi-napi": "^4.0.7",
    "@types/glob": "^8.0.0",
    "@types/mime-types": "^2.1.1",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.11.18",
    "@types/sinon": "^10.0.13",
    "@types/vscode": "^1.50.0",
    "@vscode/vsce": "^2.15.0",
    "chai": "^4.3.7",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "prettier": "^2.8.3",
    "sinon": "^15.0.1",
    "ts-loader": "^9.4.2",
    "typescript": "^4.9.4",
    "vscode-test": "^1.6.1",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1"
  },
  "dependencies": {
    "ffi-napi": "file:../node-ffi-napi",
    "jszip": "^3.10.1",
    "mime-types": "^2.1.35",
    "ref-napi": "file:../ref-napi",
    "xml-formatter": "^3.2.0"
  },
  "directories": {
    "assets:": "./assets"
  }
}
